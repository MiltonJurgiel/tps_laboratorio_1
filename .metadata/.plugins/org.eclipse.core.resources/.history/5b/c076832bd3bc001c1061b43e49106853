#include <stdio.h>
#include <stdlib.h>

int ingresarOpcion ()
{
	int opcion;

	printf("Ingrese una opcion: ");
	scanf("%d", &opcion);

	while(opcion<1 || opcion>6)
	{
		printf("Error. Ingrese una opcion valida (1 a 6): ");
		scanf("%d", &opcion);
	}

	return opcion;
}
